{
  "name": "Box Buddy",
  "service": "server",
  "workspaceFolder": "/app",
  "dockerComposeFile": [
    "../docker-compose.yml",
      "docker-compose.yml"
  ],
  "remoteUser": "django",
  "customizations": {
    "vscode": {
      "settings": {
        "[django-html]": {
          "editor.defaultFormatter": "junstyle.vscode-django-support",
          "files.associations": {
            "**/views/**/*.html": "django-html",
            "*.tpl": "django-html"
          }
        }
    
      },
      "extensions": [
        "ms-python.python",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "junstyle.vscode-django-support",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker"
      ]
    }
  }
}
